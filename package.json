{
  "name": "mono",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "up": "docker-compose -f docker-compose.dev.yml up -d",
    "stop": "docker-compose -f docker-compose.dev.yml stop",
    "down": "docker-compose -f docker-compose.dev.yml down && rm -rf data/*",
    "stage": "docker-compose -f docker-compose.dev.yml up -d",

    "up:stage": "docker-compose -f docker-compose.stage.yml up --build",
    "stop:stage": "docker-compose -f docker-compose.stage.yml stop",
    "down:stage": "docker-compose -f docker-compose.stage.yml down && rm -rf data/*",

    "postup": "yarn dev",
    "api": "yarn workspace @yagu/api",
    "client": "yarn workspace @yagu/client",
    "config": "yarn workspace @yagu/config",
    "mocks": "yarn workspace @yagu/mocks",
    "shared": "yarn workspace @yagu/shared",
    "validation": "yarn workspace @yagu/validation",
    "start:api": "yarn api start",
    "test:api": "yarn api test",
    "start:client": "yarn client start",
    "test:client": "yarn client test",
    "build:all:testing": "lerna run --ignore @yagu/client build",
    "build:client:testing": "yarn client build:testing",
    "dev": "lerna run --parallel dev",
    "build": "lerna run build",
    "start": "lerna run --parallel start",
    "lint": "eslint '**/*.{js,ts,tsx}'",
    "lint:fix": "npm run lint -- --fix",
    "generate": "graphql-codegen --config codegen.yml"
  },
  "devDependencies": {
    "lerna": "^3.22.1",
    "@graphql-codegen/cli": "^1.17.8",
    "@graphql-codegen/introspection": "^1.17.8",
    "@graphql-codegen/typescript": "1.17.9",
    "@graphql-codegen/typescript-operations": "1.17.8",
    "@graphql-codegen/typescript-react-apollo": "2.0.6",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-css-modules": "^2.11.0",
    "eslint-plugin-cypress": "^2.11.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-app": "^6.2.2",
    "eslint-plugin-react-hooks": "^4.1.0",
    "graphql": "^15.3.0",
    "prettier": "^2.1.1",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "npm run lint:fix"
    ],
    "*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|graphql|mdx)": [
      "prettier --write",
      "git add"
    ]
  }
}
