{
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ya-gu/winepoint.git"
  },
  "scripts": {
    "up": "docker-compose -f docker-compose.dev.yml up -d",
    "stop": "docker-compose -f docker-compose.dev.yml stop",
    "down": "docker-compose -f docker-compose.dev.yml down && rm -rf data/*",
    "postup": "yarn dev",

    "up:stage": "docker-compose -f docker-compose.stage.yml up --build",
    "stop:stage": "docker-compose -f docker-compose.stage.yml stop",
    "down:stage": "docker-compose -f docker-compose.stage.yml down && rm -rf data/*",

    "up:testing": "docker-compose -f docker-compose.testing.yml up --build",
    "stop:testing": "docker-compose -f docker-compose.testing.yml stop",
    "down:testing": "docker-compose -f docker-compose.testing.yml down",

    "dev": "concurrently -n api,client,watchConfig,watchValidation,watchMessages \"yarn dev:api\" \"yarn dev:client\" \"yarn watch-config\" \"yarn watch-validation\" \"yarn watch-messages\"",
    "test": "concurrently -n api,client \"yarn test:api\" \"yarn test:client\"",

    "install:api": "cd api && yarn",
    "dev:api": "cd api && yarn dev",
    "build:api": "cd api && yarn build",
    "start:api": "cd api && yarn start",
    "test:api": "cd api && yarn test",

    "install:client": "cd client && yarn",
    "dev:client": "cd client && yarn dev",
    "build:client": "cd client && yarn build",
    "start:client": "cd client && yarn start",
    "test:client": "cd client && yarn test",

    "watch-config": "cd api && yarn watch-config",
    "watch-validation": "cd api && yarn watch-validation",
    "watch-messages": "cd api && yarn watch-messages",

    "lint": "eslint '**/*.{js,ts,tsx}'",
    "lint:fix": "npm run lint -- --fix",

    "generate": "graphql-codegen --config codegen.yml"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.13.5",
    "@graphql-codegen/introspection": "^1.13.5",
    "@graphql-codegen/typescript": "1.13.5",
    "@graphql-codegen/typescript-operations": "1.13.5",
    "@graphql-codegen/typescript-react-apollo": "1.13.5",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "babel-eslint": "^10.1.0",
    "concurrently": "^5.2.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-css-modules": "^2.11.0",
    "eslint-plugin-cypress": "^2.11.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-app": "^6.2.2",
    "eslint-plugin-react-hooks": "^4.0.5",
    "graphql": "^15.1.0",
    "prettier": "^2.0.5",
    "typescript": "^3.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "npm run lint:fix"
    ],
    "*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|graphql|mdx)": [
      "prettier --write",
      "git add"
    ]
  }
}
