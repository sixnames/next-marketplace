{
  "watch": ["src/"],
  "restartable": "rs",
  "exec": "ts-node ./src/index.ts",
  "ignore": ["node_modules/**/node_modules", "src/**/*.test.ts"],
  "verbose": true,
  "execMap": {
    "ts": "node --require ts-node/register"
  },
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json,ts"
}
